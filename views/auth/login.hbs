<div class="auth">
    <div class="row">
        <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login" class="active">Login</a></li>
            <li class="tab col s6"><a href="#register">Register</a></li>
        </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}

            <h1>Login</h1>

            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" type="email" class="validate" required="true" name="email">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Write email"></span>
                </div>

                <div class="input-field">
                    <input id="password" type="password" class="validate" required="true" name="password">
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Write password"></span>
                </div>

                <input type="hidden" name="_csrf" value="{{ csrf }}">

                <p>
                    <a href="/auth/reset">Forgot password</a>
                </p>

                <button class="btn btn-primary" type="submit">
                    Login
                </button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            
            <h1>Create account</h1>
            
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="remail" type="email" class="validate" required="true" name="email">
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Write email"></span>
                </div>

                <div class="input-field">
                    <input id="name" type="text" class="validate" required="true" name="name">
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Write name"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" type="password" class="validate" required="true" name="password">
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Write password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" type="password" class="validate" required="true" name="confirm">
                    <label for="confirm">Repeat Password</label>
                    <span class="helper-text" data-error="Write password"></span>
                </div>
                
                <input type="hidden" name="_csrf" value="{{ csrf }}">

                <button class="btn btn-primary" type="submit">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>